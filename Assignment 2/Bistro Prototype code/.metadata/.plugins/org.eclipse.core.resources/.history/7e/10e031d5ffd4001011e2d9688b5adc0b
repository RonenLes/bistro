package gui;

import controllers.ClientController;
import entities.Reservation;
import javafx.fxml.FXML;
import javafx.fxml.FXMLLoader;
import javafx.scene.Parent;
import javafx.scene.Node;
import javafx.scene.Scene;
import javafx.scene.control.*;
import javafx.scene.control.DateCell;
import javafx.application.Platform;
import javafx.event.ActionEvent;
import javafx.stage.Stage;
import requests.CommandType;
import requests.EditReservationRequest;
import requests.ShowDataRequest;
import responses.ShowDataResponse;

import java.time.LocalDate;

public class EditReservationFormController {
	
	private static EditReservationFormController activeInstance;
	private ClientController clientController;
	 private int currentConfirmationCode = -1;

	
	 @FXML 
	 private TextArea txtCode;
	 
	 @FXML 
	 private DatePicker datePick;
	 
	 @FXML 
	 private ComboBox<Integer> dinerPick;
	 
	 @FXML 
	 private Button btnSearch;
	 
	 @FXML 
	 private Button btnSave;
	 
	 @FXML 
	 private Button btnBack;
	 
	 @FXML 
	 private Button btnExit;

	 @FXML
	 private Label lblDate;
	 
	 @FXML
	 private Label lblGuest;
	 
	public void setClientController(ClientController clientController) {
	    this.clientController = clientController;
	}
	
	public static EditReservationFormController getActiveInstance() {
        return activeInstance;
    }
	
	@FXML
	private void initialize() {
		activeInstance = this;

        // initially hide edit controls
        datePick.setVisible(false);
        dinerPick.setVisible(false);
        btnSave.setVisible(false);
        lblDate.setVisible(false);
        lblGuest.setVisible(false);

        // populate diners ComboBox
        dinerPick.getItems().addAll(1, 2, 3, 4, 5, 6, 7, 8);
	}
	
	@FXML
	private void searchReservation(ActionEvent event) {
		if (clientController == null) {
            showAlert("Error", "Client not connected to server.", Alert.AlertType.ERROR);
            return;
        }

        String text = txtCode.getText().trim();
        int code;

        try {
            code = Integer.parseInt(text);
        } catch (NumberFormatException e) {
            showAlert("Input Error", "Confirmation code must be a number.", Alert.AlertType.WARNING);
            return;
        }

        currentConfirmationCode = code;

        ShowDataRequest req = new ShowDataRequest(CommandType.READ_RESERVATIONS_BY_CODE, code);
               
        clientController.handleMessageFromClientUI(req);
	}
	
	public void handleShowDataFromServer(ShowDataResponse res) {

        if (!res.getIsSuccess() || res.getReservationList() == null || res.getReservationList().isEmpty()) {
            showAlert("Not Found", "No reservation found for code: " + currentConfirmationCode, Alert.AlertType.ERROR);

            datePick.setVisible(false);
            dinerPick.setVisible(false);
            btnSave.setVisible(false);
            lblDate.setVisible(false);
            lblGuest.setVisible(false);

            return;
        }

        Reservation r = res.getReservationList().get(0);

        // Fill fields
        datePick.setValue(r.getReservationDate());
        dinerPick.setValue(r.getNumberOfGuests());

        // Show controls TODO change made here
        Platform.runLater(()-> {
            datePick.setVisible(true);

        });
            dinerPick.setVisible(true);
            btnSave.setVisible(true);
            lblDate.setVisible(true);
            lblGuest.setVisible(true);
        };

	
	@FXML
	private void saveChanges(ActionEvent event) {
		if (clientController == null) {
            showAlert("Error", "Client not connected.", Alert.AlertType.ERROR);
            return;
        }

        if (currentConfirmationCode <= 0) {
            showAlert("Error", "Search for a reservation first.", Alert.AlertType.WARNING);
            return;
        }

        LocalDate date = datePick.getValue();
        Integer diners = dinerPick.getValue();

        if (date == null || diners == null) {
            showAlert("Input Error", "Please select date and diners.", Alert.AlertType.WARNING);
            return;
        }

        EditReservationRequest req = new EditReservationRequest(currentConfirmationCode, date, diners);
                

        clientController.handleMessageFromClientUI(req);
	}
	
	@FXML
	private void backToMain(ActionEvent event) {
		try {
	        FXMLLoader loader = new FXMLLoader(getClass().getResource("/gui/MainScreen.fxml"));
	        Parent root = loader.load();
	        
	        MainScreenController mainController = loader.getController();
	        mainController.setClientController(clientController);
	        
	        Stage stage = (Stage) ((Node) event.getSource()).getScene().getWindow();
	        stage.setScene(new Scene(root));
	        stage.setTitle("Bistro - Main Screen");
	        stage.show();
	        
	    } catch (Exception e) {
	        e.printStackTrace();
	        System.err.println("Failed to return to main screen.");
	    }
	}
	
	@FXML
	private void exit(ActionEvent event) {
		if(clientController != null) {
			clientController.closeClient();
		}
		
		Stage stage = (Stage) ((Node) event.getSource()).getScene().getWindow();
	    stage.close();
	    Platform.exit(); 
	    System.exit(0);
	}
	
	private void showAlert(String title, String msg, Alert.AlertType type) {
        Alert a = new Alert(type);
        a.setTitle(title);
        a.setHeaderText(null);
        a.setContentText(msg);
        a.showAndWait();
    }
}