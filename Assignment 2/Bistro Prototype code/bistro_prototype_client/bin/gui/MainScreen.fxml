<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="504.0" prefWidth="589.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.MainScreenController">

    <children>

        <!-- Centered VBox -->
        <VBox spacing="20" alignment="CENTER"
              prefWidth="300"
              AnchorPane.topAnchor="100"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0">

            <Button fx:id="btnMoveToRes" text="Make Reservation"
                    prefWidth="220" onAction="#moveToReservation" />

            <Button fx:id="btnMoveToEdit" text="Edit Reservation"
                    prefWidth="220" onAction="#moveToEdit" />

            <Button fx:id="btnMoveShowAll" text="Show All Existing Reservations"
                    prefWidth="220" onAction="#moveToShowAll" />

        </VBox>

        <!-- Exit button bottom-right -->
        <Button fx:id="btnExt"
                text="Exit"
                onAction="#exitMainScreen"
                AnchorPane.bottomAnchor="20"
                AnchorPane.rightAnchor="20"/>

    </children>

</AnchorPane>
