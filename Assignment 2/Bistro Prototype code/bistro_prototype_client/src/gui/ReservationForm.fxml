<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.ReservationFormController">

    <children>

        <!-- Main vertical layout -->
        <VBox spacing="20" alignment="CENTER"
              layoutX="100" layoutY="50"
              prefWidth="400">

            <!-- Subscriber ID -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Subscriber ID:" prefWidth="120" />
                <TextArea fx:id="txtSub"
                          prefWidth="200" prefHeight="35" />
            </HBox>

            <!-- Date Picker -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Choose Date:" prefWidth="120" />
                <DatePicker fx:id="btnDatePick"
                            prefWidth="200" />
            </HBox>

            <!-- Guests -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Guests:" prefWidth="120" />
                <ComboBox fx:id="btnGuests"
                          prefWidth="200" />
            </HBox>

            <!-- Reserve button -->
            <Button fx:id="btnReserve"
                    text="Reserve Table"
                    prefWidth="200" prefHeight="45"
                    onAction="#submitReservation" />

        </VBox>

        <!-- Exit & Back buttons -->
        <Button fx:id="btnExt"
                text="Exit"
                layoutX="510" layoutY="450"
                prefWidth="70" onAction="#exitReservationScreen" />

        <Button fx:id="btnBack"
                text="Back"
                layoutX="20" layoutY="450"
                prefWidth="70" onAction="#backToMain" />

    </children>

</AnchorPane>
