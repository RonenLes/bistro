package gui;

import controllers.ClientController;
import entities.Reservation;
import javafx.fxml.FXML;
import javafx.fxml.FXMLLoader;
import javafx.scene.Parent;
import javafx.scene.Node;
import javafx.scene.Scene;
import javafx.scene.control.*;
import javafx.scene.control.DateCell;
import javafx.event.ActionEvent;
import javafx.stage.Stage;
import requests.CommandType;
import requests.EditReservationRequest;
import requests.ShowDataRequest;
import responses.ShowDataResponse;

import java.time.LocalDate;

public class EditReservationFormController {
	
	private static EditReservationFormController activeInstance;
	private ClientController clientController;
	 private int currentConfirmationCode = -1;

	
	 @FXML 
	 private TextArea txtCode;
	 
	 @FXML 
	 private DatePicker datePick;
	 
	 @FXML 
	 private ComboBox<Integer> dinerPick;
	 
	 @FXML 
	 private Button btnSearch;
	 
	 @FXML 
	 private Button btnSave;
	 
	 @FXML 
	 private Button btnBack;
	 
	 @FXML 
	 private Button btnExit;
	 

	public void setClientController(ClientController clientController) {
	    this.clientController = clientController;
	}
	
	public static EditReservationFormController getActiveInstance() {
        return activeInstance;
    }
	
	
	private void initialize() {
		activeInstance = this;

        // initially hide edit controls
        datePick.setVisible(false);
        dinerPick.setVisible(false);
        btnSave.setVisible(false);

        // populate diners ComboBox
        dinerPick.getItems().addAll(1, 2, 3, 4, 5, 6, 7, 8);
	}
	
	@FXML
	private void searchReservation(ActionEvent event) {
		if (clientController == null) {
            showAlert("Error", "Client not connected to server.", Alert.AlertType.ERROR);
            return;
        }

        String text = txtCode.getText().trim();
        int code;

        try {
            code = Integer.parseInt(text);
        } catch (NumberFormatException e) {
            showAlert("Input Error", "Confirmation code must be a number.", Alert.AlertType.WARNING);
            return;
        }

        currentConfirmationCode = code;

        ShowDataRequest req =
                new ShowDataRequest(CommandType.READ_RESERVATIONS_BY_CODE, code);

        clientController.handleMessageFromClientUI(req);
	}
	
	private void showAlert(String title, String msg, Alert.AlertType type) {
        Alert a = new Alert(type);
        a.setTitle(title);
        a.setHeaderText(null);
        a.setContentText(msg);
        a.showAndWait();
    }
}
