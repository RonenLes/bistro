package gui;

import java.awt.TextArea;
import java.time.LocalDate;

import controllers.ClientController;
import javafx.scene.control.DatePicker;
import javafx.event.ActionEvent;
import javafx.fxml.FXML;
import javafx.fxml.FXMLLoader;
import javafx.scene.Parent;
import javafx.scene.Node;
import javafx.scene.Scene;
import javafx.scene.control.Alert;
import javafx.scene.control.Alert.AlertType;
import javafx.scene.control.Button;
import javafx.scene.control.ComboBox;
import javafx.stage.Stage;
import controllers.ClientController;


public class ReservationFormController {

	
	private ClientController clientController;
	
	@FXML
	private DatePicker btnDatePick;
	
	@FXML
	private ComboBox<Integer> btnGuests;
	
	@FXML
	private Button btnReserve;
	
	@FXML
	private Button btnExt;
	
	@FXML
	private Button btnBack;
	
	@FXML
	private TextArea textAreaSub;

	public void setClientController(ClientController clientController) {
	    this.clientController = clientController;
	}
	
	
	private void showAlert(String title, String msg, Alert.AlertType type) {
	    Alert alert = new Alert(type);
	    alert.setTitle(title);
	    alert.setHeaderText(null);      
	    alert.setContentText(msg);     
	    alert.showAndWait();          
	}	
	
	@FXML
	private void initialize() {
		btnGuests.getItems().addAll(1,2,3,4,5,6,7,8);
	}
	
	@FXML
	private void submitReservation(ActionEvent evert) {
		
		if (clientController == null) {
	        showAlert("Error", "Client connection missing.", Alert.AlertType.ERROR);
	        return;
	    }
		
		//check user entered date
		LocalDate visitDate = btnDatePick.getValue();
	    if (visitDate == null) {
	        showAlert("Input Error", "Please choose a date.", Alert.AlertType.WARNING);
	        return;
	    }
	    
	    //check user entered guests
	    Integer diners = btnGuests.getValue();
	    if (diners == null) {
	        showAlert("Input Error", "Please select number of diners.", Alert.AlertType.WARNING);
	        return;
	    }
	    
	    //get subscriber id
	    int subscriberId = 0;
	    String subText = textAreaSub.getText().trim();
	    if (!subText.isEmpty()) {
	        try {
	            subscriberId = Integer.parseInt(subText);
	        } catch (NumberFormatException e) {
	            showAlert("Input Error", "Subscriber ID must be a number.", Alert.AlertType.WARNING);
	            return;
	        }
	    }
	}
	
	
}
