package gui;

import controllers.ClientController;
import entities.Reservation;
import javafx.fxml.FXML;
import javafx.fxml.FXMLLoader;
import javafx.scene.Parent;
import javafx.scene.Node;
import javafx.scene.Scene;
import javafx.scene.control.*;
import javafx.event.ActionEvent;
import javafx.stage.Stage;
import requests.CommandType;
import requests.ShowDataRequest;
import responses.ShowDataResponse;

public class ShowAllReservationFormController {

	
	private ClientController clientController;
	private static ShowAllReservationFormController activeInstance;
	
	@FXML
	private Button btnRefresh;
	
	@FXML
	private Button btnExit;
	
	@FXML
	private Button btnBack;
	
	@FXML
	private TextArea txtAllRev;
	
	public void setClientController(ClientController clientController) {
	    this.clientController = clientController;
	}
	public static ShowAllReservationFormController getActiveInstance() {
        return activeInstance;
    }
	
	@FXML
	private void initialize() {
		activeInstance = this;
	}
	
	private void requestAllReservations() {
        if (clientController == null) {
            appendText("Client not connected to server.\n");
            return;
        }

        ShowDataRequest req =
                new ShowDataRequest(CommandType.READ_ALL_EXISTING_RESERVATIONWS, 0);

        clientController.handleMessageFromClientUI(req);
    }
	
	@FXML
	private void refresh(ActionEvent event) {
        requestAllReservations();
    }
	
	public void handleShowDataFromServer(ShowDataResponse res) {

        if (!res.getIsSuccess()) {
            showAlert("Server Error", res.toString(), Alert.AlertType.ERROR);
            txtAllRev.setText("Server Error:\n" + res.toString());
            return;
        }

        if (res.getReservationList() == null || res.getReservationList().isEmpty()) {
        	txtAllRev.setText("No reservations found.");
            return;
        }

        StringBuilder sb = new StringBuilder();
        for (Reservation r : res.getReservationList()) {
            if (r == null) continue;
            sb.append("Reservation ID: ").append(r.getReservationID())
              .append("\nDate: ").append(r.getReservationDate())
              .append("\nGuests: ").append(r.getNumberOfGuests())
              .append("\nConfirmation Code: ").append(r.getConfirmationCode())
              .append("\nSubscriber ID: ").append(r.getSubscriberId())
              .append("\nPlaced On: ").append(r.getDateOfPlacingOrder())
              .append("\n------------------------------\n");
        }

        txtAllRev.setText(sb.toString());
    }
	
	private void appendText(String text) {
        if (txtAllRev != null) {
        	txtAllRev.appendText(text);
        }
    }
	
	private void showAlert(String title, String msg, Alert.AlertType type) {
        Alert a = new Alert(type);
        a.setTitle(title);
        a.setHeaderText(null);
        a.setContentText(msg);
        a.showAndWait();
    }
}
