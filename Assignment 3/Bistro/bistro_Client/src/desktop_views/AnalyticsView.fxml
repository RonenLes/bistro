<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1280.0" styleClass="surface"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox spacing="12.0" BorderPane.alignment="CENTER">
            <children>
                <VBox spacing="2.0">
                    <children>
                        <Label text="Analytics" styleClass="h2"/>
                        <Label text="High-level KPIs and current diners (placeholder UI)" styleClass="muted"/>
                    </children>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Refresh" styleClass="ghost"/>
            </children>
            <BorderPane.margin>
                <Insets top="14.0" right="14.0" bottom="10.0" left="14.0"/>
            </BorderPane.margin>
        </HBox>
    </top>

    <center>
        <VBox spacing="14.0" BorderPane.alignment="CENTER">
            <children>
                <GridPane hgap="14.0" vgap="14.0">
                    <children>
                        <VBox styleClass="tile" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <children>
                                <Label text="Total Guests" styleClass="subtle"/>
                                <Label text="—" styleClass="title"/>
                            </children>
                        </VBox>
                        <VBox styleClass="tile" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <children>
                                <Label text="Avg Wait Time" styleClass="subtle"/>
                                <Label text="—" styleClass="title"/>
                            </children>
                        </VBox>
                        <VBox styleClass="tile" GridPane.columnIndex="2" GridPane.rowIndex="0">
                            <children>
                                <Label text="No‑Show Rate" styleClass="subtle"/>
                                <Label text="—" styleClass="title"/>
                            </children>
                        </VBox>
                        <VBox styleClass="tile" GridPane.columnIndex="3" GridPane.rowIndex="0">
                            <children>
                                <Label text="Revenue (Month)" styleClass="subtle"/>
                                <Label text="—" styleClass="title"/>
                            </children>
                        </VBox>
                    </children>
                </GridPane>

                <HBox spacing="14.0">
                    <children>
                        <VBox prefWidth="620.0" spacing="10.0" styleClass="card">
                            <children>
                                <Label text="Current Diners" styleClass="subtle"/>
                                <TableView fx:id="dinersTable" prefHeight="420.0">
                                    <columns>
                                        <TableColumn fx:id="colTable" text="Table" prefWidth="100.0"/>
                                        <TableColumn fx:id="colParty" text="Party" prefWidth="90.0"/>
                                        <TableColumn fx:id="colSince" text="Seated At" prefWidth="140.0"/>
                                        <TableColumn fx:id="colCode" text="Code" prefWidth="150.0"/>
                                        <TableColumn fx:id="colType" text="Type" prefWidth="120.0"/>
                                    </columns>
                                </TableView>
                            </children>
                            <padding><Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/></padding>
                        </VBox>

                        <VBox prefWidth="620.0" spacing="10.0" styleClass="card">
                            <children>
                                <Label text="Notes / Insights" styleClass="subtle"/>
                                <VBox spacing="10.0" styleClass="panel">
                                    <children>
                                        <Label text="End-of-month reports are generated automatically (phase 1 requirement)." styleClass="muted"/>
                                        <Label text="This screen is UI-only for now; wire it to services later." styleClass="muted"/>
                                    </children>
                                    <padding><Insets top="10.0" right="12.0" bottom="10.0" left="12.0"/></padding>
                                </VBox>
                            </children>
                            <padding><Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/></padding>
                        </VBox>
                    </children>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets top="0.0" right="14.0" bottom="14.0" left="14.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
