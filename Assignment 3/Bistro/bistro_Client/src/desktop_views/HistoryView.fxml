<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1280.0" styleClass="surface"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox spacing="12.0" BorderPane.alignment="CENTER">
            <children>
                <VBox spacing="2.0">
                    <children>
                        <Label text="My History" styleClass="h2"/>
                        <Label text="Reservations + visits history (subscriber view, placeholder UI)" styleClass="muted"/>
                    </children>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <ComboBox fx:id="monthFilter" promptText="Month" prefWidth="160.0"/>
                <Button text="Export" styleClass="ghost"/>
            </children>
            <BorderPane.margin>
                <Insets top="14.0" right="14.0" bottom="10.0" left="14.0"/>
            </BorderPane.margin>
        </HBox>
    </top>

    <center>
        <VBox spacing="12.0" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="historyTable" prefHeight="660.0">
                    <columns>
                        <TableColumn fx:id="colType" text="Type" prefWidth="140.0"/>
                        <TableColumn fx:id="colDate" text="Date" prefWidth="120.0"/>
                        <TableColumn fx:id="colTime" text="Time" prefWidth="90.0"/>
                        <TableColumn fx:id="colParty" text="Party" prefWidth="90.0"/>
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="160.0"/>
                        <TableColumn fx:id="colTotal" text="Total" prefWidth="120.0"/>
                        <TableColumn fx:id="colDiscount" text="Discount" prefWidth="120.0"/>
                        <TableColumn fx:id="colCode" text="Code" prefWidth="160.0"/>
                    </columns>
                </TableView>

                <VBox styleClass="panel">
                    <children>
                        <Label text="Note" styleClass="subtle"/>
                        <Label text="Subscribers can view history and update contact details (phone/email)." styleClass="muted"/>
                    </children>
                    <padding><Insets top="10.0" right="12.0" bottom="10.0" left="12.0"/></padding>
                </VBox>
            </children>
            <BorderPane.margin>
                <Insets top="0.0" right="14.0" bottom="14.0" left="14.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
