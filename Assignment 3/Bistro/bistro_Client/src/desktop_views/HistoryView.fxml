<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1280.0" styleClass="surface"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="desktop_views.HistoryViewController">

    <top>
        <HBox spacing="12.0" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="14.0" right="14.0" bottom="10.0" left="14.0"/>
            </BorderPane.margin>

            <children>
                <VBox spacing="2.0">
                    <children>
                        <Label text="My History" styleClass="h2"/>
                        <Label text="Reservations + visits history" styleClass="muted"/>
                    </children>
                </VBox>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Discount banner: only visible for subscribers (controlled by controller) -->
                <VBox fx:id="discountBanner" spacing="2.0" alignment="CENTER_RIGHT" visible="false" managed="false">
                    <children>
                        <Label text="Discount" styleClass="subtle"/>
                        <Label fx:id="discountValueLabel" text="" styleClass="muted"/>
                    </children>
                </VBox>

                <ComboBox fx:id="monthFilter" promptText="Month" prefWidth="160.0"/>
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="12.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="0.0" right="14.0" bottom="14.0" left="14.0"/>
            </BorderPane.margin>

            <children>
                <TableView fx:id="historyTable" prefHeight="660.0">
                    <columns>
                        <TableColumn fx:id="colDate" text="Date" prefWidth="140.0"/>
                        <TableColumn fx:id="colReservedFor" text="Reserved for" prefWidth="110.0"/>
                        <TableColumn fx:id="colCheckIn" text="Check-in" prefWidth="110.0"/>
                        <TableColumn fx:id="colCheckOut" text="Check-out" prefWidth="110.0"/>
                        <TableColumn fx:id="colTable" text="Table" prefWidth="90.0"/>
                        <TableColumn fx:id="colParty" text="Party" prefWidth="90.0"/>
                        <TableColumn fx:id="colTotal" text="Total" prefWidth="140.0"/>
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="160.0"/>
                    </columns>
                </TableView>

                <VBox styleClass="panel">
                    <padding>
                        <Insets top="10.0" right="12.0" bottom="10.0" left="12.0"/>
                    </padding>
                    <children>
                        <Label text="Note" styleClass="subtle"/>
                        <Label fx:id="infoLabel" text="" styleClass="muted"/>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>
