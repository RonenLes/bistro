<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1280.0" styleClass="surface"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="desktop_views.ReservationsViewController">

    <top>
        <HBox spacing="12.0" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="14.0" right="14.0" bottom="10.0" left="14.0"/>
            </BorderPane.margin>
            <children>
                <VBox spacing="2.0">
                    <children>
                        <Label text="Reservations" styleClass="h2"/>
                        <Label text="Pick a date and party size, then choose an available slot" styleClass="muted"/>
                    </children>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="18.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="14.0" left="14.0" right="14.0" top="0.0"/>
            </BorderPane.margin>

            <VBox fx:id="step1Pane" alignment="CENTER" spacing="16.0" maxWidth="720.0">
                <children>
                    <Label text="Create a reservation" styleClass="h2"/>
                    <HBox alignment="CENTER" spacing="12.0">
                        <children>
                            <VBox spacing="6.0" alignment="CENTER_LEFT">
                                <Label text="Party size" styleClass="subtle"/>
                                <Spinner fx:id="partySizeSpinner" prefWidth="160.0"/>
                            </VBox>
                            <VBox spacing="6.0" alignment="CENTER_LEFT">
                                <Label text="Date" styleClass="subtle"/>
                                <DatePicker fx:id="datePicker" prefWidth="220.0"/>
                            </VBox>
                            <VBox spacing="6.0" alignment="CENTER_LEFT">
                                <Label text=" " />
                                <Button text="Show times" styleClass="primary" onAction="#onFindTimes" prefWidth="160.0"/>
                            </VBox>
                        </children>
                    </HBox>
                    <Label fx:id="infoLabel" text="" styleClass="muted"/>
                </children>
            </VBox>

            <VBox fx:id="step2Pane" alignment="TOP_CENTER" spacing="14.0" maxWidth="920.0" visible="false" managed="false" VBox.vgrow="ALWAYS">
                <children>
                    <HBox alignment="CENTER" spacing="10.0">
                        <VBox spacing="2.0">
                            <Label text="Choose a time" styleClass="h2"/>
                            <Label fx:id="slotHeaderLabel" text="â€”" styleClass="muted"/>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Change search" styleClass="ghost" onAction="#onBackToForm"/>
                    </HBox>

                    <ScrollPane fitToWidth="true" styleClass="edge-to-edge" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
                        <content>
                            <VBox fx:id="slotsContainer" spacing="20.0" alignment="TOP_LEFT">
                                <padding>
                                    <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
                                </padding>
                            </VBox>
                        </content>
                    </ScrollPane>

                    <Label fx:id="slotInfoLabel" text="" styleClass="muted"/>
                </children>
            </VBox>
        </VBox>
    </center>
</BorderPane>