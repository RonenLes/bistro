<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1280.0" styleClass="surface"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox spacing="12.0" BorderPane.alignment="CENTER">
            <children>
                <VBox spacing="2.0">
                    <children>
                        <Label text="Tables" styleClass="h2"/>
                        <Label text="Manage table inventory and seating capacity (placeholder UI)" styleClass="muted"/>
                    </children>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <TextField fx:id="searchField" promptText="Search table #" prefWidth="220.0"/>
                <Button text="Add Table" styleClass="primary"/>
                <Button text="Edit Seats" styleClass="ghost"/>
                <Button text="Remove" styleClass="ghost"/>
            </children>
            <BorderPane.margin>
                <Insets top="14.0" right="14.0" bottom="10.0" left="14.0"/>
            </BorderPane.margin>
        </HBox>
    </top>

    <center>
        <VBox spacing="12.0" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="tablesTable" prefHeight="620.0">
                    <columns>
                        <TableColumn fx:id="colTableNo" text="Table #" prefWidth="120.0"/>
                        <TableColumn fx:id="colSeats" text="Seats" prefWidth="110.0"/>
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="160.0"/>
                        <TableColumn fx:id="colCurrentCode" text="Current Code" prefWidth="180.0"/>
                        <TableColumn fx:id="colNotes" text="Notes" prefWidth="360.0"/>
                    </columns>
                </TableView>

                <HBox spacing="12.0">
                    <children>
                        <VBox spacing="4.0" styleClass="panel">
                            <children>
                                <Label text="Hint" styleClass="subtle"/>
                                <Label text="Each reservation takes a whole table; no split/merge needed (phase 1)." styleClass="muted"/>
                            </children>
                            <padding><Insets top="10.0" right="12.0" bottom="10.0" left="12.0"/></padding>
                        </VBox>
                    </children>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets top="0.0" right="14.0" bottom="14.0" left="14.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
