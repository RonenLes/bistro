<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1280.0" styleClass="surface" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="desktop_views.WaitlistViewController">
    <top>
        <HBox spacing="12.0" BorderPane.alignment="CENTER">
            <children>
                <VBox spacing="2.0">
                    <children>
                        <Label styleClass="h2" text="Waitlist" />
                        <Label styleClass="muted" text="Add/remove customers and track queue (placeholder UI)" />
                    </children>
                </VBox>
                <Region HBox.hgrow="ALWAYS" />
                <TextField fx:id="searchField" prefWidth="320.0" promptText="Search by code / phone / email" />
                <ComboBox fx:id="stateFilter" prefWidth="140.0" promptText="State" />
                <Button styleClass="primary" text="Add to Waitlist" />
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="14.0" right="14.0" top="14.0" />
            </BorderPane.margin>
        </HBox>
    </top>

    <center>
        <HBox spacing="14.0" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="waitlistTable" prefWidth="860.0">
                    <columns>
                        <TableColumn fx:id="colAdded" prefWidth="120.0" text="Added" />
                        <TableColumn fx:id="colParty" prefWidth="70.0" text="Party" />
                        <TableColumn fx:id="colCustomer" prefWidth="220.0" text="Customer" />
                        <TableColumn fx:id="colContact" prefWidth="220.0" text="Contact" />
                        <TableColumn fx:id="colCode" prefWidth="140.0" text="Code" />
                        <TableColumn fx:id="colEta" prefWidth="80.0" text="ETA" />
                    </columns>
                </TableView>

                <VBox prefWidth="360.0" spacing="10.0" styleClass="card">
                    <children>
                        <Label styleClass="subtle" text="Selected Entry" />
                        <Label fx:id="selTitle" styleClass="h2" text="—" />

                        <VBox spacing="8.0" styleClass="panel">
                            <children>
                                <Label styleClass="subtle" text="Details" />
                                <Label fx:id="detailParty" styleClass="muted" text="Party size: —" />
                                <Label fx:id="detailContact" styleClass="muted" text="Contact: —" />
                                <Label fx:id="detailStatus" styleClass="muted" text="Status: —" />
                                <Label fx:id="detailAssigned" styleClass="muted" text="Table: —" />
                            </children>
                            <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
                        </VBox>

                        <HBox spacing="10.0">
                            <children>
                                <Button styleClass="primary" text="Seat Now" />
                                <Button styleClass="ghost" text="Remove" />
                            </children>
                        </HBox>

                        <HBox spacing="10.0">
                            <children>
                                <Button styleClass="ghost" text="Notify" />
                                <Button styleClass="ghost" text="Mark No‑Show" />
                            </children>
                        </HBox>
                    </children>
                    <padding><Insets bottom="14.0" left="14.0" right="14.0" top="14.0" /></padding>
                </VBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="14.0" left="14.0" right="14.0" top="0.0" />
            </BorderPane.margin>
        </HBox>
    </center>
</BorderPane>
