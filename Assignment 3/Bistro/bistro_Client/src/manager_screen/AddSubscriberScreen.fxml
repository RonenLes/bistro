<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1280.0" styleClass="surface"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="manager_screen.AddSubscriberScreenController">
    <top>
        <HBox spacing="12.0" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <children>
                <VBox spacing="2.0">
                    <children>
                        <Label text="Add User" styleClass="h2"/>
                        <Label text="Register a new user account" styleClass="muted"/>
                    </children>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Save" styleClass="primary" onAction="#onSave"/>
                <Button text="Clear" styleClass="ghost" onAction="#onClear"/>
            </children>
            <BorderPane.margin>
                <Insets top="14.0" right="14.0" bottom="10.0" left="14.0"/>
            </BorderPane.margin>
        </HBox>
    </top>

    <center>
        <VBox spacing="14.0" BorderPane.alignment="CENTER" maxWidth="620.0">
            <children>
                <VBox spacing="10.0" styleClass="card">
                    <children>
                        <Label text="Subscriber Details" styleClass="subtle"/>
                        <VBox spacing="8.0" styleClass="panel">
                            <children>
                                <Label text="Username" styleClass="subtle"/>
                                <TextField fx:id="usernameField" promptText="Enter username"/>
                                <Label text="Password" styleClass="subtle"/>
                                <TextField fx:id="passwordField" promptText="Enter password"/>
                                <Label text="Phone" styleClass="subtle"/>
                                <TextField fx:id="phoneField" promptText="Enter phone"/>
                                <Label text="Email" styleClass="subtle"/>
                                <TextField fx:id="emailField" promptText="Enter email"/>
                                <Label text="Role" styleClass="subtle"/>
                                <ComboBox fx:id="roleComboBox" promptText="Select role"/>
                            </children>
                            <padding><Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/></padding>
                        </VBox>
                        <Label fx:id="infoLabel" text="" styleClass="muted"/>
                    </children>
                    <padding><Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/></padding>
                </VBox>
            </children>
            <BorderPane.margin>
                <Insets top="0.0" right="14.0" bottom="14.0" left="14.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>