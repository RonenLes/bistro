<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1280.0" styleClass="surface"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="manager_screen.ShowDataScreenController">
    <top>
        <HBox spacing="12.0" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <children>
                <VBox spacing="2.0">
                    <children>
                        <Label text="Manager Data" styleClass="h2"/>
                         <Label text="View waiting list and seating" styleClass="muted"/>
                    </children>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Refresh" styleClass="ghost" onAction="#onRefresh"/>
            </children>
            <BorderPane.margin>
                <Insets top="14.0" right="14.0" bottom="10.0" left="14.0"/>
            </BorderPane.margin>
        </HBox>
    </top>

    <center>
        <VBox spacing="14.0" BorderPane.alignment="CENTER">
            <children>                
                <HBox spacing="14.0">
                    <children>
                        <VBox prefWidth="620.0" spacing="10.0" styleClass="card">
                            <children>
                                <Label text="Waiting List" styleClass="subtle"/>
                                <TableView fx:id="waitingTable" prefHeight="260.0">
                                    <columns>
                                        <TableColumn fx:id="colWaitingPriority" text="Priority" prefWidth="140.0"/>
                                        <TableColumn fx:id="colWaitingTime" text="Requested At" prefWidth="190.0"/>
                                        <TableColumn fx:id="colWaitingContact" text="Contact" prefWidth="220.0"/>
                                    </columns>
                                </TableView>
                            </children>
                            <padding><Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/></padding>
                        </VBox>

                        <VBox prefWidth="620.0" spacing="10.0" styleClass="card">
                            <children>
                                <Label text="Current Seating" styleClass="subtle"/>
                                <TableView fx:id="seatingTable" prefHeight="260.0">
                                    <columns>
                                        <TableColumn fx:id="colSeatingTable" text="Table" prefWidth="100.0"/>
                                        <TableColumn fx:id="colSeatingParty" text="Party" prefWidth="100.0"/>
                                        <TableColumn fx:id="colSeatingCheckIn" text="Checked In" prefWidth="180.0"/>
                                        <TableColumn fx:id="colSeatingCode" text="Code" prefWidth="160.0"/>
                                        <TableColumn fx:id="colSeatingType" text="Type" prefWidth="120.0"/>
                                    </columns>
                                </TableView>
                            </children>
                            <padding><Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/></padding>
                        </VBox>
                    </children>
                </HBox>
                <Label fx:id="infoLabel" text="" styleClass="muted"/>
            </children>
            <BorderPane.margin>
                <Insets top="0.0" right="14.0" bottom="14.0" left="14.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>