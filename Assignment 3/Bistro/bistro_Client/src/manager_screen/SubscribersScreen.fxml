<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1280.0" styleClass="surface"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="manager_screen.SubscribersScreenController">
    <top>
        <HBox spacing="12.0" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <children>
                <VBox spacing="2.0">
                    <children>
                        <Label text="Subscribers" styleClass="h2"/>
                        <Label text="View all subscribers and their history" styleClass="muted"/>
                    </children>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Refresh" styleClass="ghost" onAction="#onRefresh"/>
            </children>
            <BorderPane.margin>
                <Insets top="14.0" right="14.0" bottom="10.0" left="14.0"/>
            </BorderPane.margin>
        </HBox>
    </top>

    <center>
        <VBox spacing="14.0" BorderPane.alignment="CENTER">
            <children>
                <VBox spacing="10.0" styleClass="card">
                    <children>
                        <Label text="All Subscribers" styleClass="subtle"/>
                        <TableView fx:id="subscribersTable" prefHeight="280.0">
                            <columns>
                                <TableColumn fx:id="colSubscriberId" text="User ID" prefWidth="150.0"/>
                                <TableColumn fx:id="colSubscriberName" text="Username" prefWidth="170.0"/>
                                <TableColumn fx:id="colSubscriberPhone" text="Phone" prefWidth="170.0"/>
                                <TableColumn fx:id="colSubscriberEmail" text="Email" prefWidth="240.0"/>
                                <TableColumn fx:id="colSubscriberHistory" text="History" prefWidth="150.0"/>
                            </columns>
                        </TableView>
                    </children>
                    <padding><Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/></padding>
                </VBox>

                <VBox spacing="10.0" styleClass="card">
                    <children>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                            <children>
                                <Label text="History" styleClass="subtle"/>
                                <Label fx:id="historyTargetLabel" text="Select a subscriber" styleClass="muted"/>
                            </children>
                        </HBox>
                        <TableView fx:id="historyTable" prefHeight="280.0">
                            <columns>
                                <TableColumn fx:id="colDate" text="Date" prefWidth="140.0"/>
                                <TableColumn fx:id="colReservedFor" text="Reserved for" prefWidth="110.0"/>
                                <TableColumn fx:id="colCheckIn" text="Check-in" prefWidth="110.0"/>
                                <TableColumn fx:id="colCheckOut" text="Check-out" prefWidth="110.0"/>
                                <TableColumn fx:id="colTable" text="Table" prefWidth="90.0"/>
                                <TableColumn fx:id="colParty" text="Party" prefWidth="90.0"/>
                                <TableColumn fx:id="colTotal" text="Total" prefWidth="140.0"/>
                                <TableColumn fx:id="colStatus" text="Status" prefWidth="160.0"/>
                            </columns>
                        </TableView>
                    </children>
                    <padding><Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/></padding>
                </VBox>

                <Label fx:id="infoLabel" text="" styleClass="muted"/>
            </children>
            <BorderPane.margin>
                <Insets top="0.0" right="14.0" bottom="14.0" left="14.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>