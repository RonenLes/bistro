<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1280.0" styleClass="surface"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
             fx:controller="subscriber_screen.SubscriberMainScreenController">
    <top>
        <HBox spacing="12.0" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <children>
                <VBox spacing="2.0">
                    <children>
                        <Label text="Subscriber Home" styleClass="h2"/>
                        <Label text="Your upcoming reservations" styleClass="muted"/>
                    </children>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="qrLabel" text="User ID: -" styleClass="muted"/>
                <Button text="QR" styleClass="ghost" onAction="#onShowQr"/>
                <Button text="Refresh" styleClass="ghost" onAction="#onRefresh"/>
            </children>
            <BorderPane.margin>
                <Insets top="14.0" right="14.0" bottom="10.0" left="14.0"/>
            </BorderPane.margin>
        </HBox>
    </top>

    <center>
        <VBox spacing="14.0" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="reservationsTable" prefHeight="520.0">
                    <columns>
                        <TableColumn fx:id="colDate" text="Date" prefWidth="220.0"/>
                        <TableColumn fx:id="colStartTime" text="Start Time" prefWidth="220.0"/>
                        <TableColumn fx:id="colPartySize" text="Party Size" prefWidth="180.0"/>
                        <TableColumn fx:id="colConfirmationCode" text="Confirmation Code" prefWidth="200.0"/>
                        <TableColumn fx:id="colEdit" text="Edit" prefWidth="120.0"/>
                        <TableColumn fx:id="colCancel" text="Cancel" prefWidth="120.0"/>
                    </columns>
                </TableView>

                <Label fx:id="infoLabel" text="" styleClass="muted"/>
            </children>
            <BorderPane.margin>
                <Insets top="0.0" right="14.0" bottom="14.0" left="14.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>