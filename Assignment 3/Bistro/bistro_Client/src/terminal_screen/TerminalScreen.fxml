<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>

<BorderPane prefHeight="800.0" prefWidth="1280.0" stylesheets="@../../resources/stylesheet.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="terminal_screen.TerminalScreenController">

    <top>
        <ToolBar prefHeight="92.0">
            <items>
                <Region prefHeight="81.0" prefWidth="349.0" />
                <Button onAction="#onCheckIn" prefHeight="55" prefWidth="138.0" text="Check-in" />
                <Button onAction="#onJoinWaitingList" prefHeight="55" prefWidth="150.0" text="Join Waiting List" />
                <Button onAction="#onPayBill" prefHeight="55" prefWidth="135.0" text="Pay Bill" />
                <Button onAction="#onLostCode" prefHeight="55" prefWidth="137.0" text="Lost My Code" />
            </items>
        </ToolBar>
    </top>
   <center>
        <!-- THIS is where screens appear -->
        <StackPane fx:id="contentHolder" BorderPane.alignment="CENTER" />
   </center>

</BorderPane>
